{
  "name": "circuit",
  "version": "0.1.0",
  "description": "",
  "main": "lib/index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prepublish": "npm test && npm run lint ./src && npm run build",
    "build": "babel src --out-dir lib --source-maps-inline",
    "watch": "babel src --out-dir lib --watch --source-maps-inline",
    "lint": "eslint -c=package.json",
    "lint:fix": "eslint -c=package.json --fix",
    "test": "ava",
    "test:watch": "ava --watch",
    "start": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khirayama/circuit.git"
  },
  "keywords": [
    "flux"
  ],
  "author": "khirayama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khirayama/circuit/issues"
  },
  "homepage": "https://github.com/khirayama/circuit#readme",
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-plugin-espower": "^2.3.1",
    "babel-preset-es2015": "^6.16.0",
    "eslint": "^3.8.1",
    "eslint-config-xo-space": "^0.15.0",
    "sinon": "^1.17.6"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "babel-plugin-espower"
    ]
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "require": [
      "babel-core/register"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo-space/esnext"
    ],
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  },
  "dependencies": {
    "react": "^15.4.1"
  }
}
